@{
  Layout = "_Layout";
}

<div class='container'>
  <h3>Client List</h3>
    <div class="row">
      <div class="col-sm-8">
        <strong>Name</strong>
      </div>
      <div class="col-sm-4">
        <strong>Options</strong>
      </div>
    </div>
      @foreach (var client in Model)
        {
          <div class="row">
            <div class="col-sm-8">
              @client.Name
            </div>
            <div class="col-sm-2">
              <a href="/clients/@client.Id" class="btn btn-info btn-sm">Client Info</a>
            </div>
            <div class="col-sm-2">
              <a href="/clients/@client.Id/delete" class="btn btn-danger btn-sm">Delete Client</a>
            </div>
          </div>
        }
  <div>
    <a href="/stylists/new" class="btn btn-info btn-sm">Create New Client</a>
    <br>
    <a href="/stylists/delete-all" class="btn btn-danger btn-sm">Delete All Clients</a>
  </div>

</div>
