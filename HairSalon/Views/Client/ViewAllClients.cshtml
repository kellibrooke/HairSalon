@{
  Layout = "_Layout";
}

<div class='container'>
  <h1>Client List</h1>
    <div class="row">
      <div class="col-sm-12">
        <h4>Name</h4>
      </div>
    </div>
      @foreach (var client in Model)
        {
          <div class="row row-decor">
            <div class="col-sm-8">
              @client.Name
            </div>
            <div class="col-sm-2">
              <a href="/clients/@client.Id" class="btn btn-info btn-sm">Client Info</a>
            </div>
            <div class="col-sm-2">
              <form action="/clients/@client.Id/delete" method="post">
                <button type="submit" class="btn btn-danger btn-sm">Delete Client</button>
              </form>
            </div>
          </div>
        }
  <div class="bottom-buttons row">
    <div class="col-sm-2">
      <a href="/clients/new" class="btn btn-info btn-sm">Create New Client</a>
    </div>
    <div class="col-sm-2">
      <form action="/clients/deleteall" method="post">
        <button type="submit" class="btn btn-danger btn-sm">Delete All Clients</button>
      </form>
    </div>
  </div>

</div>
