@{
  Layout = "_Layout";
}

<div class="well">
  <h3>Get Existing Client Information</h3>
  <form action="/client-info" method="post">
    <div class="form-group">
      <label for="stylist-select">Select A Client</label>
      <select class="form-control form-control-sm" name="stylist-select">
        @foreach (var client in Model)
        {
            <option value = "@client.GetId()">
              @client.GetName()
            </option>
        }
      </select>
    </div>
    <button class="btn btn-info" type="submit">Show Client Info</button>
  </form>
</div>
